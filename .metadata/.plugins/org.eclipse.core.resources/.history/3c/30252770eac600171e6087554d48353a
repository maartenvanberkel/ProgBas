package be.pxl.h7.oef6;

import java.util.Scanner;

public class H7Oef6 {

	public static void main(String[] args) {
		Scanner keyboard = new Scanner(System.in);
		
		int punten[][] = {{12,4,12,9},{14,5,9,11},{8,9,7,12},{7,12,11,10},{11,18,10,14}};
		String studenten[] = {"student 1", "student 2", "student 3", "student 4", "student 5"};
		String vakken[] = {"vak 1", "vak 2", "vak 3", "vak 4"};
		int laagstepunt = 21;
		int totaalPerVak = 0;
		int gemiddelde = 0;
		
		for (int i = 0; i < vakken.length; i++) {
			for (int j = 0; j < studenten.length; j++) {
				if (punten[i][j] < laagstepunt) {
					laagstepunt = punten[i][j];
				}
				totaalPerVak = totaalPerVak + punten[i][j];
			}
			gemiddelde = totaalPerVak / studenten.length;
		}
		
		for (int i = 0; i < vakken.length; i++) {
			System.out.printf("Het laagst behaald punt voor %s is %d. Dit werd behaald door %s. Het gemiddelde voor dit vak bedraagt %.1f%%. \n", vakken[i], laagstepunt, studenten[i], gemiddelde );
		}
		
		
		
		
		
		keyboard.close();
	}
}